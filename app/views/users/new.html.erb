<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <div class="jumbotron">
    <h2>Sign-Up</h2>
      <%= form_tag '/users', method: :post do  %>  
        <%= label_tag :name %>
        <%= text_field_tag :name  %>
        <br>
        <%= label_tag :email %>
        <%= text_field_tag :email  %>
        <br>
        <%= label_tag :password %>
        <%= password_field_tag :password  %>
        <br>
        <%= label_tag :password_confirmation %>
        <%= password_field_tag :password_confirmation  %>
        <br>
        <%= submit_tag "Submit", :class => "btn btn-default"  %> 
      <% end %>
  </div>

</body>
</html>
