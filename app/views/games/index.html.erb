
<h2> GAMES IN PROGRESS </h2> 
  <% @activated_games.each_slice(5) do |game_row| %>
    <div class="row">
      <% game_row.each do |activated_game| %>
        <a href="/games/<%= activated_game.id %>"> <%= activated_game.id %> </a>
      <% end %>
    </div>
  <% end %>

<br>

<h2> COMPLETED GAMES </h2>
  <% @completed_games.each_slice(5) do |game_row| %>
    <div class="row">
      <% game_row.each do |completed_game| %>
        <a href="/games/<%= completed_game.id %>"> <%= completed_game.id %> </a>
      <% end %>
    </div>
  <% end %>

<%= form_tag '/games', method: :post do %>
  <div> 
    <%= text_field_tag :search %>
  </div>
  <div>
    <%= hidden_field_tag(:user_id, current_user.id) %>
  </div>
  <div>
    <%= hidden_field_tag(:status, "Activated") %>
  </div>
  <div>
    <%= submit_tag "CREATE GAME!" %>
  </div>
<% end %>
