<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
<h1> Movie Routes </h1>
<h3> Login </h3>
  <%= form_tag '/sessions', method: :post do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <p> <%= submit_tag "Submit", :class => "btn btn-default"  %> </p>
<% end %>

<a href="/signup" class="btn btn-default"> Not a user? Signup!</a>

</body>
</html>
